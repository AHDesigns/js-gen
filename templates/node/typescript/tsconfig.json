{
  "compilerOptions": {
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist/",
    "strict": true,
    "sourceMap": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "noEmitOnError": false,
    "baseUrl": "./",
    "paths": {
      "@utils/*": ["src/utils/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules",
    "test/",
    "src/**/*.spec.ts"
  ]
}
